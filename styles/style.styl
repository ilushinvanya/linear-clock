* {
  padding: 0;
  margin: 0;
  user-select: none;
}
body {
  position: fixed;
  width: 100%;
  height: 100%;
  overscroll-behavior: contain;
}
canvas {
  display: block;
  cursor: crosshair;
}
#tools {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}
#tools button {
  padding: 12px;
  margin: 4px 2px;
  font-size: 18px;
}
#tools.dark button {
  background: #2d2c2c;
  color: white;
  border: 1px #2d2c2c solid;
  box-shadow: 0 1px 7px 0 white;
  border-radius: 9px;
}
#tools button.active {
  background: #1f1d1d;
  color: #e3e3e3;
}
grass-color = #d7ffc0
green-color = #ceefc5
white-color = #ffffff
blue-color-transparent = rgba(71, 67, 137, 0)
green-blur = linear-gradient(78deg, green-color 5%, blue-color-transparent 30%)
grass-blur = linear-gradient(317deg, grass-color, blue-color-transparent 100%)
colorize-bg()
  background-color white-color
  background-image green-blur, grass-blur
  background-attachment fixed
  background-size cover
#warning {
  colorize-bg()
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 101;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  display: none;
}
#warning p {
  font-size: 38px;
  text-align: center;

}
#warning button {
  font-size: 32px;
  padding: 10px;
}
